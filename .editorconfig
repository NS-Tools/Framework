# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,ts}]
charset = utf-8

# 4 spaces indentation
[*.{ts,js}]
indent_style = spaces
indent_size = 4
tab_width = 4
