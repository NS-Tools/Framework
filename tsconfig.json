{
  "compilerOptions": {
    "module": "amd",
    "target": "ES2018",
    "outDir": "dist/js",
    "declarationDir": "dist/declarations",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "rootDirs": [
      "."
    ],
    "sourceMap": false,
    "newLine": "LF",
    "declaration": true,
    "experimentalDecorators": true,
    "downlevelIteration": false,
    "baseUrl": ".",
    "paths": {
      "N": ["node_modules/@hitc/netsuite-types/N"],
      "N/*": ["node_modules/@hitc/netsuite-types/N/*"],
    },
    "incremental": false,
  },
  "include": [
    "./*.ts",
    "DataAccess/**/*.ts",
    "examples/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "declarations",
    "dist",
    "__mocks__"
  ]
}